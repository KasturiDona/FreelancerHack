<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @user.id === @current_user.id %>
    
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :class => 'form-control', :placeholder => "example@example.com" %>
    </div>
    
   
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => 'form-control', :placeholder => 'name' %>
    </div>
    
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "your password", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: "retype password", :class=> "form-control" %>
    </div>  
    <div class="field form-group">
      <%= f.label :skillset %><br>
      <%= f.text_area :skillset, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :hiring_status %><br>
      <%= f.check_box :hiring_status, :class => 'form-control' %>
    </div>
  <% else %>
    <div class="field form-group">
      <%= f.label :collaborator %><br>
      <%= f.check_box :collaborator, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :rating %><br>
      <%= f.text_field :rating, :class => 'form-control' %>
    </div>
    
    <div class="field form-group">
      <%= f.label :account %><br>
      <%= f.text_field :account, :class => 'form-control' %>
    </div>
  <% end %>
  <div class="actions form-group">
    <%= f.submit :class => 'submit btn btn-primary' %>

  </div>
<% end %>
