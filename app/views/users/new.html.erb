<h1>New User</h1>

<div class="row">
    <div class="col-md-4"></div>
    <div class="form-group col-md-4">
      <%= f.label :email, :class => 'sr-only', :for => 'exampleInputEmail3' %>
      <%= f.email_field :email, :class => 'form-control', :id => 'exampleInputEmail3', :placeholder => 'Email' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="form-group col-md-4">
      <%= f.label :name, :class => 'sr-only', :for => 'exampleInputName3' %>
      <%= f.text_field :name, :class => 'form-control', :id => 'exampleInputName3', :placeholder => 'Name' %>
    </div>
  </div>  
  <div class="row">
    <div class="col-md-4"></div>
    <div class="form-group col-md-4">
      <%= f.label :password, :class => 'sr-only', :for => 'exampleInputPassword3' %>
      <%= f.password_field :password, :class => 'form-control', :id => 'exampleInputPassword3', :placeholder => 'Password' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="form-group col-md-4">
      <%= f.label :password_confirmation, :class => 'sr-only', :for => 'exampleInputPassword3' %>
      <%= f.password_field :password_confirmation, :class => 'form-control', :id => 'exampleInputPassword3', :placeholder => 'Confrim Password' %>
    </div>
  </div>

