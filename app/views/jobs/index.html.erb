<div class="index-page">
<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>
<p class="btn btn-primary"><%= link_to 'New Job', new_job_path %></p>

<table class="table table-striped">
  <thead>
    <tr class="success">
      <th>User</th>
      <th>Complete</th>
      <th>Description</th>
      <th>Job type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to job.user_id, job %></td>
        <td><%= job.complete %></td>
        <td><%= job.description %></td>
        <td><%= job.job_type %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
