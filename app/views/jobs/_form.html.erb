<%= form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <label>Freelancer</label>
    <%= f.select :user_id, User.all.map { |user| [ user.name, user.id ] }, :include_blank => true, :class=> "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :complete %><br>
    <%= f.check_box :complete, :class=> "checkbox" %>
  </div>
  <div class="field form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, :class=> "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :job_type %><br>
    <%= f.text_field :job_type, :class=> "form-control" %>
  </div>

  <div class="field form-group">
    <label>Project</label>
    <%= f.select :project_id, Project.all.map { |project| [ project.name, project.id ] }, :include_blank => true, :class=> "form-control" %>
  </div>

  <div class="actions form-group">
    <%= f.submit :class => 'submit btn btn-primary'%>
  </div>
<% end %>
